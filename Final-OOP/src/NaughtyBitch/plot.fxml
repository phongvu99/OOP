<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NaughtyBitch.plotController">
   <children>
      <StackedBarChart fx:id="sbc" title="Gas Station Fund ">
        <xAxis>
          <CategoryAxis label="Month" side="BOTTOM" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="yAxis" label="\$ (in kVND)" side="LEFT" />
        </yAxis>
      </StackedBarChart>
      <Button fx:id="plot" mnemonicParsing="false" onAction="#createChart" style="-fx-background-color: #6666FF; -fx-border-color: #6666FF;" text="The Secret Of The Universe" textFill="WHITE" />
   </children>
</StackPane>
